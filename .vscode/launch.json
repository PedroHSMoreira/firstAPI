    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "launch",
        "name": "App",
        "program": "${workspaceFolder}\\src\\app.ts",
        "preLaunchTask": "npm: build",
        "sourceMaps": true,
        "smartStep": true,
        "internalConsoleOptions": "openOnSessionStart",
        "outFiles": [
            "${workspaceFolder}\\dist\\debug\\*.js"
        ]
    }, {
        "type": "node",
        "request": "attach",
        "name": "Attach to Port",
        "address": "localhost",
        "port": 5858,
        "outFiles": []
    }]
}